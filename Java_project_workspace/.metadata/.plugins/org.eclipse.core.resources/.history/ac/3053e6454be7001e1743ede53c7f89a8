package com.society.controller;

import java.util.List;

import com.society.models.BlockVo;
import com.society.models.MemberVo;
import com.society.services.BlockService;
import com.society.services.MemberService;
import org.apache.catalina.servlet4preview.http.HttpServletRequest;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.*;
import org.springframework.web.multipart.MultipartFile;
import org.springframework.web.servlet.ModelAndView;

@Controller
@RestController
public class MembersController {

    @Autowired
    private BlockService blockService;

    @Autowired
    private MemberService memberService;

    @GetMapping(value = "admin/members")
    public ModelAndView manageOwners() {
        List<BlockVo> blockList = this.blockService.searchBlock();
        return new ModelAndView("admin/manageMembers").addObject("blockList", blockList);
    }

    @PostMapping(value = "admin/saveMembers")
    public ModelAndView saveMembers(@RequestParam int ownerId, @RequestParam List<MultipartFile> memberFile, HttpServletRequest request) {

        String[] memberNames = request.getParameterValues("memberName");
        String[] memberPhoneNumber = request.getParameterValues("memberPhone");
        String[] memberEmailAddress = request.getParameterValues("memberEmail");
        this.memberService.addMembers(ownerId, memberNames, memberPhoneNumber, memberEmailAddress);
        return new ModelAndView("redirect:admin/members");
    }

    @RequestMapping(value = "admin/searchMembers/{ownerId}", method = RequestMethod.GET)
    public List<MemberVo> searchMember(@PathVariable("ownerId") int ownerId) {
        List<MemberVo> list = this.memberService.findMembers(ownerId);
        return list;
    }

    @RequestMapping(value = "admin/deleteMembers/{memberId}", method = RequestMethod.GET)
    public String deleteMember(@PathVariable("memberId") int memberId) {
        this.memberService.deleteMember(memberId);
        return "Member Deleted";
    }
}
